---
import { siteConfig } from "@/site.config";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: "website" | "article" | "profile" | "blog";
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  authorUrl?: string;
  section?: string;
  tags?: string[];
  noindex?: boolean;
  readingTime?: string;
  wordCount?: number;
  project?: {
    name: string;
    description: string;
    url: string;
    language?: string;
    stars?: number;
    forks?: number;
  };
  blogPost?: {
    title: string;
    description: string;
    publishedTime: string;
    modifiedTime?: string;
    author: string;
    tags: string[];
    image?: string;
    readingTime?: string;
    wordCount?: number;
  };
  isAuthorPage?: boolean;
  isBlogListPage?: boolean;
  isProjectListPage?: boolean;
}

const {
  title = siteConfig.seo.defaultTitle,
  description = siteConfig.seo.defaultDescription,
  image = siteConfig.ogImage,
  type = "website",
  publishedTime,
  modifiedTime,
  author = siteConfig.author.name,
  section,
  tags = siteConfig.seo.keywords,
  noindex = false,
  readingTime,
  project,
  blogPost,
  isAuthorPage = false,
  isBlogListPage = false,
  isProjectListPage = false,
} = Astro.props;

const siteURL = new URL(Astro.url.pathname, Astro.site ?? siteConfig.url);
let resolvedImage = image;
const path = Astro.url.pathname.replace(/\/$/, "");

if (resolvedImage === siteConfig.ogImage) {
  if (path === "" || path === "/") resolvedImage = "/open-graph/index.png";
  else if (path === "/projects") resolvedImage = "/open-graph/projects.png";
  else if (path === "/works") resolvedImage = "/open-graph/works.png";
  else if (path === "/about") resolvedImage = "/open-graph/about.png";
  else if (path === "/blog") resolvedImage = "/open-graph/blog.png";
}

const imageURL = resolvedImage.startsWith("http")
  ? resolvedImage
  : new URL(resolvedImage, siteURL).toString();
const canonicalURL = siteURL.toString();

const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "@id": `${siteConfig.url}/#person`,
  name: siteConfig.author.name,
  url: siteConfig.url,
  image: {
    "@type": "ImageObject",
    url: siteConfig.author.avatar,
    width: 400,
    height: 400,
  },
  email: siteConfig.author.email,
  jobTitle: siteConfig.author.roles,
  description: siteConfig.author.bio,
  sameAs: [
    siteConfig.social.github,
    siteConfig.social.linkedin,
    siteConfig.social.twitter,
    siteConfig.social.medium,
    siteConfig.social.hashnode,
    siteConfig.social.orcid,
    siteConfig.social.portfolio,
    siteConfig.social.linktree,
  ],
  worksFor: {
    "@type": "Organization",
    "@id": `${siteConfig.url}/#organization`,
    name: siteConfig.organization.name,
    url: siteConfig.organization.url,
    logo: siteConfig.organization.logo,
  },
  address: {
    "@type": "PostalAddress",
    addressCountry: siteConfig.author.location.country,
  },
  knowsAbout: [
    "Full-stack Development",
    "Artificial Intelligence",
    "Machine Learning",
    "Open Source Software",
    "Zig Programming",
    "Python",
    "TypeScript",
    "JavaScript",
    "React",
    "Next.js",
    "Astro",
  ],
};

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "@id": `${siteConfig.url}/#organization`,
  name: siteConfig.organization.name,
  url: siteConfig.organization.url,
  logo: {
    "@type": "ImageObject",
    url: siteConfig.organization.logo,
    width: 400,
    height: 400,
  },
  founder: {
    "@type": "Person",
    "@id": `${siteConfig.url}/#person`,
  },
  sameAs: [siteConfig.social.github],
};

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "@id": `${siteConfig.url}/#website`,
  url: siteConfig.url,
  name: siteConfig.name,
  description: siteConfig.description,
  publisher: {
    "@type": "Person",
    "@id": `${siteConfig.url}/#person`,
  },
  inLanguage: siteConfig.locale.replace("_", "-"),
  potentialAction: {
    "@type": "SearchAction",
    target: {
      "@type": "EntryPoint",
      urlTemplate: `${siteConfig.url}/projects?q={search_term_string}`,
    },
    "query-input": "required name=search_term_string",
  },
};

const webPageSchema = {
  "@context": "https://schema.org",
  "@type": type === "article" ? "Article" : type === "profile" ? "ProfilePage" : "WebPage",
  "@id": canonicalURL,
  url: canonicalURL,
  name: title,
  description: description,
  image: {
    "@type": "ImageObject",
    url: imageURL,
    width: 1200,
    height: 630,
  },
  inLanguage: siteConfig.locale.replace("_", "-"),
  isPartOf: {
    "@type": "WebSite",
    "@id": `${siteConfig.url}/#website`,
  },
  author: {
    "@type": "Person",
    "@id": `${siteConfig.url}/#person`,
  },
  ...(publishedTime && { datePublished: publishedTime }),
  ...(modifiedTime && { dateModified: modifiedTime }),
};

const blogPostSchema = blogPost
  ? {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "@id": canonicalURL,
      mainEntityOfPage: {
        "@type": "WebPage",
        "@id": canonicalURL,
      },
      headline: blogPost.title,
      description: blogPost.description,
      image: {
        "@type": "ImageObject",
        url: blogPost.image || imageURL,
        width: 1200,
        height: 630,
      },
      datePublished: blogPost.publishedTime,
      dateModified: blogPost.modifiedTime || blogPost.publishedTime,
      author: {
        "@type": "Person",
        "@id": `${siteConfig.url}/#person`,
        name: blogPost.author,
      },
      publisher: {
        "@type": "Person",
        "@id": `${siteConfig.url}/#person`,
        name: siteConfig.author.name,
        logo: {
          "@type": "ImageObject",
          url: siteConfig.author.avatar,
        },
      },
      keywords: blogPost.tags.join(", "),
      articleSection: section || "Technology",
      inLanguage: siteConfig.locale.replace("_", "-"),
      ...(blogPost.wordCount && { wordCount: blogPost.wordCount }),
      ...(blogPost.readingTime && {
        timeRequired: `PT${blogPost.readingTime.replace(" min read", "").replace(" mins read", "")}M`,
      }),
    }
  : null;

const projectSchema = project
  ? {
      "@context": "https://schema.org",
      "@type": "SoftwareSourceCode",
      "@id": project.url,
      name: project.name,
      description: project.description,
      url: project.url,
      codeRepository: project.url,
      programmingLanguage: project.language,
      author: {
        "@type": "Person",
        "@id": `${siteConfig.url}/#person`,
      },
      creator: {
        "@type": "Person",
        "@id": `${siteConfig.url}/#person`,
      },
      ...(project.stars && {
        aggregateRating: {
          "@type": "AggregateRating",
          ratingValue: Math.min(5, (project.stars / 100) * 5),
          ratingCount: project.stars,
          bestRating: 5,
        },
      }),
    }
  : null;

const profilePageSchema = isAuthorPage
  ? {
      "@context": "https://schema.org",
      "@type": "ProfilePage",
      "@id": canonicalURL,
      mainEntity: {
        "@type": "Person",
        "@id": `${siteConfig.url}/#person`,
      },
      dateCreated: "2024-01-01",
      dateModified: new Date().toISOString().split("T")[0],
    }
  : null;

const blogListSchema = isBlogListPage
  ? {
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      "@id": canonicalURL,
      name: "Blog",
      description: "Articles about software development, AI/ML, and technology",
      url: canonicalURL,
      isPartOf: {
        "@type": "WebSite",
        "@id": `${siteConfig.url}/#website`,
      },
      about: {
        "@type": "Thing",
        name: "Software Development",
      },
      author: {
        "@type": "Person",
        "@id": `${siteConfig.url}/#person`,
      },
    }
  : null;

const projectListSchema = isProjectListPage
  ? {
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      "@id": canonicalURL,
      name: "Projects",
      description: "Open source projects and developer tools",
      url: canonicalURL,
      isPartOf: {
        "@type": "WebSite",
        "@id": `${siteConfig.url}/#website`,
      },
      about: {
        "@type": "Thing",
        name: "Open Source Software",
      },
      author: {
        "@type": "Person",
        "@id": `${siteConfig.url}/#person`,
      },
    }
  : null;

const breadcrumbItems = [
  {
    "@type": "ListItem",
    position: 1,
    name: "Home",
    item: siteConfig.url,
  },
];

if (Astro.url.pathname !== "/" && Astro.url.pathname !== "") {
  const pathParts = Astro.url.pathname.split("/").filter(Boolean);
  let currentPath = "";
  
  pathParts.forEach((part, index) => {
    currentPath += `/${part}`;
    breadcrumbItems.push({
      "@type": "ListItem",
      position: index + 2,
      name: part.charAt(0).toUpperCase() + part.slice(1).replace(/-/g, " "),
      item: `${siteConfig.url}${currentPath}`,
    });
  });
}

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: breadcrumbItems,
};

const allSchemas = [
  personSchema,
  organizationSchema,
  websiteSchema,
  webPageSchema,
  breadcrumbSchema,
  ...(blogPostSchema ? [blogPostSchema] : []),
  ...(projectSchema ? [projectSchema] : []),
  ...(profilePageSchema ? [profilePageSchema] : []),
  ...(blogListSchema ? [blogListSchema] : []),
  ...(projectListSchema ? [projectListSchema] : []),
];
---

<meta charset="utf-8" />
<meta
  name="viewport"
  content="width=device-width, initial-scale=1, viewport-fit=cover"
/>
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />
<meta
  name="theme-color"
  content="#000000"
  media="(prefers-color-scheme: dark)"
/>
<meta
  name="theme-color"
  content="#ffffff"
  media="(prefers-color-scheme: light)"
/>
<meta name="color-scheme" content="dark light" />

<link rel="canonical" href={canonicalURL} />

<meta
  name="robots"
  content={noindex
    ? "noindex, nofollow"
    : "index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"}
/>
<meta
  name="googlebot"
  content={noindex ? "noindex, nofollow" : "index, follow"}
/>

<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="keywords" content={tags.join(", ")} />
<meta name="author" content={author} />
<meta name="publisher" content={siteConfig.author.name} />

<meta property="og:type" content={type === "blog" ? "article" : type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageURL} />
<meta
  property="og:image:alt"
  content={`${siteConfig.author.name} - ${title}`}
/>
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:site_name" content={siteConfig.name} />
<meta property="og:locale" content={siteConfig.locale} />

{
  (type === "article" || type === "blog") && publishedTime && (
    <meta property="article:published_time" content={publishedTime} />
  )
}
{
  (type === "article" || type === "blog") && modifiedTime && (
    <meta property="article:modified_time" content={modifiedTime} />
  )
}
{
  (type === "article" || type === "blog") && author && (
    <meta property="article:author" content={author} />
  )
}
{
  (type === "article" || type === "blog") && section && (
    <meta property="article:section" content={section} />
  )
}
{
  (type === "article" || type === "blog") &&
    tags &&
    tags.map((tag) => <meta property="article:tag" content={tag} />)
}

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={canonicalURL} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={imageURL} />
<meta
  name="twitter:image:alt"
  content={`${siteConfig.author.name} - ${title}`}
/>
<meta name="twitter:site" content={siteConfig.social.twitterHandle} />
<meta name="twitter:creator" content={siteConfig.social.twitterHandle} />
{
  readingTime && (
    <meta name="twitter:label1" content="Reading time" />
    <meta name="twitter:data1" content={readingTime} />
  )
}

<meta name="format-detection" content="telephone=no" />
<meta name="mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta
  name="apple-mobile-web-app-status-bar-style"
  content="black-translucent"
/>
<meta name="apple-mobile-web-app-title" content={siteConfig.name} />
<meta name="application-name" content={siteConfig.name} />

<meta name="geo.region" content="IN" />
<meta name="geo.placename" content={siteConfig.author.location.country} />

<meta name="DC.title" content={title} />
<meta name="DC.creator" content={author} />
<meta name="DC.description" content={description} />
<meta name="DC.language" content={siteConfig.locale.replace("_", "-")} />
{publishedTime && <meta name="DC.date" content={publishedTime} />}

<link rel="preconnect" href="https://api.github.com" crossorigin />
<link
  rel="preconnect"
  href="https://avatars.githubusercontent.com"
  crossorigin
/>
<link rel="dns-prefetch" href="https://www.googletagmanager.com" />

<link
  rel="alternate"
  type="application/rss+xml"
  title={`${siteConfig.name} RSS Feed`}
  href="/rss.xml"
/>

<link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />

{
  allSchemas.map((schema) => (
    <script is:inline type="application/ld+json" set:html={JSON.stringify(schema)} />
  ))
}
