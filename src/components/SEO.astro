---
interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
}

const {
  title,
  description = "Muhammad Fiaz - Full-stack developer and open-source maintainer.",
  image = "/favicon.svg",
  type = "website",
} = Astro.props;

const siteURL = new URL(Astro.url.pathname, Astro.site ?? "https://muhammad-fiaz.github.io");
const imageURL = new URL(image, siteURL);

const schema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Muhammad Fiaz",
  "url": "https://muhammad-fiaz.github.io",
  "sameAs": [
    "https://github.com/muhammad-fiaz",
    "https://www.linkedin.com/in/muhammad-fiaz-/",
    "https://muhammad-fiaz.medium.com/",
    "https://muhammadfiaz.hashnode.dev/"
  ],
  "jobTitle": "Full-stack Developer",
  "worksFor": {
    "@type": "Organization",
    "name": "Open Source"
  },
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Madurai",
    "addressRegion": "Tamil Nadu",
    "addressCountry": "India"
  },
  "description": description
};
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />
<meta name="robots" content="index, follow" />

<!-- Canonical URL -->
<link rel="canonical" href={siteURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={siteURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageURL} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={siteURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={imageURL} />

<!-- JSON-LD Schema -->
<script type="application/ld+json" set:html={JSON.stringify(schema)} />
