---
interface Props {
  rounded?: boolean;
}

const { rounded } = Astro.props;
---

<button
    class={`custom-btn text-xl max-h-[50px] shadow-custom shadow-blue-5 active:shadow-none active:translate-x-[3px] active:translate-y-[3px] text-gray-200 px-5 py-2 border border-blue-5 hover:text-white hover:bg-blue-500 hover:border-blue-500 hover:shadow-blue-500 transition-colors duration-100 ease-in-out bg-gray-900 cursor-pointer ${
        rounded ? "rounded-full" : "rounded-lg"
    }`}
>
  <slot />
</button>
