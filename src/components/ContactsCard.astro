---
import Card from "./Card/index.astro";
import { LINKS } from "../lib/constants";
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4">
  <div class="h-full flex flex-col justify-between">
    <header class="flex items-center mb-4">
      <h1 class="text-white text-xl font-bold">
        🤝 Let's start working together!
      </h1>
    </header>

    <section class="mb-4">
      <h2 class="text-white font-bold mb-1">📬 Contact Details</h2>
      <address class="not-italic">
        <p>
          <a
              href="mailto:contact@muhammadfiaz.com"
              class="text-blue-400 hover:underline transition"
          >
            contact@muhammadfiaz.com
          </a>
        </p>
        <p>📍 India</p>
      </address>
    </section>

    <section>
      <h2 class="text-white font-bold mb-1">🌐 Socials</h2>
      <ul class="space-y-1">
        <li>
          <a
              href={LINKS.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="text-blue-400 hover:underline transition"
          >
            🔗 LinkedIn
          </a>
        </li>
        <li>
          <a
              href={LINKS.github}
              target="_blank"
              rel="noopener noreferrer"
              class="text-blue-400 hover:underline transition"
          >
            💻 GitHub
          </a>
        </li>
        <li>
          <a
              href={LINKS.medium}
              target="_blank"
              rel="noopener noreferrer"
              class="text-blue-400 hover:underline transition"
          >
            ✍️ Medium
          </a>
        </li>
        <li>
          <a
              href={LINKS.discord}
              target="_blank"
              rel="noopener noreferrer"
              class="text-blue-400 hover:underline transition"
          >
            💬 Discord
          </a>
        </li>
      </ul>
    </section>
  </div>
</Card>
