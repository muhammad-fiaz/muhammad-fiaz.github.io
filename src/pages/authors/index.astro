---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { slugify } from "@/lib/utils";
import { ArrowLeft, User } from "lucide-react";
import { Button } from "@/components/ui/button";

const posts: CollectionEntry<"blog">[] = await getCollection("blog");
const uniqueAuthors: string[] = [
  ...new Set(posts.map((post: CollectionEntry<"blog">) => post.data.author)),
];
---

<BaseLayout title="Authors" description="Contributions by our team">
  <div
    class="container max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12 md:py-16 lg:py-20"
  >
    <!-- Back Button - Responsive -->
    <div class="mb-6 sm:mb-8">
      <Button
        variant="ghost"
        asChild
        className="group pl-0 hover:bg-transparent hover:text-primary gap-2 text-sm sm:text-base"
      >
        <a href="/blog" class="inline-flex items-center gap-2">
          <ArrowLeft
            className="h-4 w-4 transition-transform group-hover:-translate-x-1"
          />
          <span class="hidden sm:inline">Back to Blog</span>
          <span class="sm:hidden">Back</span>
        </a>
      </Button>
    </div>

    <!-- Header -->
    <div class="mb-8 sm:mb-10 md:mb-12 space-y-2 sm:space-y-3">
      <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold tracking-tight">
        Authors
      </h1>
      <p class="text-sm sm:text-base md:text-lg text-muted-foreground">
        Contributors who share their knowledge and insights.
      </p>
    </div>

    <!-- Authors Grid -->
    <div
      class="grid gap-3 sm:gap-4 md:gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3"
    >
      {
        uniqueAuthors.map((author) => (
          <a
            href={`/authors/${slugify(author)}`}
            class="flex items-center gap-3 sm:gap-4 p-4 sm:p-5 md:p-6 rounded-xl sm:rounded-2xl border border-border/50 bg-card/50 backdrop-blur-sm hover:border-primary/50 hover:bg-card/80 hover:shadow-lg transition-all duration-300 group"
          >
            <div class="h-10 w-10 sm:h-12 sm:w-12 rounded-full bg-primary/10 flex items-center justify-center text-primary shrink-0">
              <User className="h-5 w-5 sm:h-6 sm:w-6" />
            </div>
            <div class="min-w-0">
              <h2 class="text-base sm:text-lg md:text-xl font-semibold group-hover:text-primary transition-colors truncate">
                {author}
              </h2>
              <p class="text-xs sm:text-sm text-muted-foreground">
                {posts.filter((p) => p.data.author === author).length} post
                {posts.filter((p) => p.data.author === author).length !== 1
                  ? "s"
                  : ""}
              </p>
            </div>
          </a>
        ))
      }
    </div>

    {
      uniqueAuthors.length === 0 && (
        <div class="text-center py-12 sm:py-16 text-muted-foreground">
          <p class="text-sm sm:text-base">No authors found yet.</p>
        </div>
      )
    }
  </div>
</BaseLayout>
