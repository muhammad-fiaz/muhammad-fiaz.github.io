---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import { slugify } from "@/lib/utils";
import { ArrowLeft } from "lucide-react";
import { Button } from "@/components/ui/button";
import { siteConfig } from "@/site.config";
import AdUnit from "@/components/ads/AdUnit.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  const uniqueTags = [
    ...new Set(posts.flatMap((post) => post.data.tags || [])),
  ];

  return uniqueTags.map((tag) => {
    return {
      params: { tag: slugify(tag) },
      props: {
        tagName: tag,
        posts: posts
          .filter((post) => post.data.tags?.includes(tag))
          .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()),
      },
    };
  });
}

const { tagName, posts } = Astro.props;
---

<BaseLayout
  title={`Tag: #${tagName}`}
  description={`Posts tagged with ${tagName}`}
>
  <div
    class="container max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12 md:py-16 lg:py-20"
  >
    <!-- Back Button - Responsive -->
    <div class="mb-6 sm:mb-8">
      <Button
        variant="ghost"
        asChild
        className="group pl-0 hover:bg-transparent hover:text-primary gap-2 text-sm sm:text-base"
      >
        <a href="/blog" class="inline-flex items-center gap-2">
          <ArrowLeft
            className="h-4 w-4 transition-transform group-hover:-translate-x-1"
          />
          <span class="hidden sm:inline">Back to Blog</span>
          <span class="sm:hidden">Back</span>
        </a>
      </Button>
    </div>

    <!-- Header -->
    <div class="mb-6 sm:mb-8 md:mb-10">
      <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold">
        Posts tagged with <span class="text-primary">#{tagName}</span>
      </h1>
      <p class="text-sm sm:text-base text-muted-foreground mt-2">
        {posts.length} post{posts.length !== 1 ? "s" : ""} found
      </p>
    </div>

    <!-- Posts Grid -->
    <div class="grid gap-4 sm:gap-6 md:gap-8">
      {
        posts.map((post, index) => (
          <>
            <a
              href={`/blog/${post.id}`}
              class="group block p-4 sm:p-6 md:p-8 rounded-xl sm:rounded-2xl border border-border/50 bg-card/50 backdrop-blur-sm hover:border-primary/50 hover:bg-card/80 hover:shadow-lg transition-all duration-300"
            >
              <div class="flex flex-col gap-2 sm:gap-3">
                <h2 class="text-lg sm:text-xl md:text-2xl lg:text-3xl font-semibold group-hover:text-primary transition-colors">
                  {post.data.title}
                </h2>
                <div class="flex flex-wrap items-center gap-2 text-xs sm:text-sm text-muted-foreground">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {post.data.pubDate.toLocaleDateString("en-US", {
                      year: "numeric",
                      month: "short",
                      day: "numeric",
                    })}
                  </time>
                  <span class="hidden sm:inline">â€¢</span>
                  <span class="hidden sm:inline">{post.data.author}</span>
                </div>
                <p class="text-xs sm:text-sm md:text-base text-muted-foreground leading-relaxed mt-1 line-clamp-2">
                  {post.data.description}
                </p>
              </div>
            </a>
            {(index + 1) % 6 === 0 && (
              <div class="py-4">
                <AdUnit
                  slot={siteConfig.adsense.slots.inFeed.id}
                  layoutKey={siteConfig.adsense.slots.inFeed.layoutKey}
                  format="fluid"
                  class="bg-card/50 backdrop-blur-sm rounded-[14px] border border-border/50 p-4"
                />
              </div>
            )}
          </>
        ))
      }
    </div>

    {
      posts.length === 0 && (
        <div class="text-center py-12 sm:py-16 text-muted-foreground">
          <p class="text-sm sm:text-base">No posts found with this tag.</p>
        </div>
      )
    }
  </div>
</BaseLayout>
