---
import "../styles/global.css";
import { Navbar } from "@/components/layout/Navbar";
import { Footer } from "@/components/layout/Footer";
import SEO from "@/components/SEO.astro";
import { siteConfig } from "@/site.config";
import AdUnit from "@/components/ads/AdUnit.astro";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: "website" | "article" | "profile" | "blog";
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  tags?: string[];
  readingTime?: string;
  centered?: boolean;
  noindex?: boolean;
  project?: {
    name: string;
    description: string;
    url: string;
    language?: string;
    stars?: number;
    forks?: number;
  };
  blogPost?: {
    title: string;
    description: string;
    publishedTime: string;
    modifiedTime?: string;
    author: string;
    tags: string[];
    image?: string;
    readingTime?: string;
    wordCount?: number;
  };
  isAuthorPage?: boolean;
  isBlogListPage?: boolean;
  isProjectListPage?: boolean;
  frontmatter?: Record<string, any>;
}

const props = Astro.props;
const frontmatter = props.frontmatter || {};

const rawTitle = frontmatter.title || props.title;
const title = rawTitle
  ? `${rawTitle} | ${siteConfig.author.name}`
  : siteConfig.seo.defaultTitle;
const description =
  frontmatter.description ||
  props.description ||
  siteConfig.seo.defaultDescription;
const image = frontmatter.image || props.image || siteConfig.ogImage;
const type = frontmatter.type || props.type || "website";
const centered = frontmatter.centered ?? props.centered ?? false;

const {
  publishedTime,
  modifiedTime,
  author,
  tags,
  readingTime,
  noindex = false,
  project,
  blogPost,
  isAuthorPage = false,
  isBlogListPage = false,
  isProjectListPage = false,
} = props;

const gtmId = siteConfig.analytics.googleTagManagerId;
const gaId = siteConfig.analytics.googleAnalyticsId;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <SEO
      title={title}
      description={description}
      image={image}
      type={type}
      publishedTime={publishedTime}
      modifiedTime={modifiedTime}
      author={author}
      tags={tags}
      readingTime={readingTime}
      noindex={noindex}
      project={project}
      blogPost={blogPost}
      isAuthorPage={isAuthorPage}
      isBlogListPage={isBlogListPage}
      isProjectListPage={isProjectListPage}
    />

    <script is:inline>
      const getThemePreference = () => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme-storage")
        ) {
          try {
            const storage = JSON.parse(localStorage.getItem("theme-storage"));
            return storage.state.theme;
          } catch (e) {
            return "dark";
          }
        }
        return window.matchMedia("(prefers-color-scheme: dark)").matches
          ? "dark"
          : "light";
      };
      const theme = getThemePreference();
      const isDark =
        theme === "dark" ||
        (theme === "system" &&
          window.matchMedia("(prefers-color-scheme: dark)").matches);
      document.documentElement.classList[isDark ? "add" : "remove"]("dark");
    </script>

    <script is:inline define:vars={{ gtmId }}>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({
          "gtm.start": new Date().getTime(),
          event: "gtm.js",
        });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", gtmId);
    </script>

    <script
      type="text/partytown"
      async
      src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`}></script>
    <script type="text/partytown" define:vars={{ gaId }}>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", gaId);
    </script>

    <!-- Google AdSense Meta Tag -->
    {
      siteConfig.adsense.enabled && (
          <meta
            name="google-adsense-account"
            content={siteConfig.adsense.clientId}
          />
          <script
            is:inline
            async
            src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${siteConfig.adsense.clientId}`}
            crossorigin="anonymous"
          />
      )
    }

    <style is:global>
      /* Prevent layout shifts from ads */
      .adsbygoogle {
        display: block;
        min-height: 100px;
        width: 100%;
      }
      @media (min-width: 1024px) {
        .adsbygoogle[data-ad-format="vertical"] {
          min-height: 600px;
        }
      }
    </style>

    <slot name="head" />
  </head>

  <body
    class="bg-background font-sans antialiased min-h-screen overflow-x-hidden"
  >
    <noscript>
      <iframe
        src={`https://www.googletagmanager.com/ns.html?id=${gtmId}`}
        height="0"
        width="0"
        style="display:none;visibility:hidden"
        loading="lazy"
        aria-hidden="true"></iframe>
    </noscript>

    <div id="app-wrapper" class="relative flex flex-col min-h-screen">
      <!-- Left Side Ad (Desktop Only) -->
      <aside
        class="hidden 2xl:block fixed left-4 top-24 w-[160px] h-[600px] z-10 pointer-events-none"
      >
        <div class="pointer-events-auto">
          <AdUnit
            slot={siteConfig.adsense.slots.display.ad6}
            format="vertical"
            style="display: inline-block; width: 160px; height: 600px;"
          />
        </div>
      </aside>

      <!-- Right Side Ad (Desktop Only) -->
      <aside
        class="hidden 2xl:block fixed right-4 top-24 w-[160px] h-[600px] z-10 pointer-events-none"
      >
        <div class="pointer-events-auto">
          <AdUnit
            slot={siteConfig.adsense.slots.display.ad1}
            format="vertical"
            style="display: inline-block; width: 160px; height: 600px;"
          />
        </div>
      </aside>

      <Navbar client:load />

      <main class="flex-1 w-full pt-16">
        <div
          class:list={[
            centered &&
              "container max-w-4xl mx-auto px-4 py-12 prose prose-lg dark:prose-invert",
            !centered && "",
          ]}
        >
          <slot />
        </div>
      </main>

      <Footer client:load />
    </div>

  </body>
</html>
